{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "manifest_version": 2,
    "name": "Ad Blocker for Facebook™",
    "version": "1.8.3",
    "description": "An open-source Ad Blocker for Facebook™",
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "author": "tiratatp",
    "homepage_url": "https://github.com/Mundo291/Hide-ADS-FACEBOOK/tree/gh-pages",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.facebook.com/*",
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
}
